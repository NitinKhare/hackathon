  <title>Email Card Template</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.6.0/css/bootstrap.min.css">
  <style>
    .card {
      max-width: 400px;
      margin: 0 auto;
      margin-top: 100px;
    }
    .email-body {
      white-space: pre-line;
    }
  </style>

<body>
    <%- include('Navbar.ejs') %>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Email</h5>
      <p class="card-text"><%= data.email %></p>

      <h5 class="card-title">Email Subject</h5>
      <p class="card-text email-body"><%= data.emailSubject %></p>

      <h5 class="card-title">Email Body</h5>
      <p class="card-text email-body"><%= data.emailBody %></p>


      <div class="form-check">
        <% if (data?.emailSent == "YES"){ %>

        <input class="form-check-input" type="checkbox" value="" id="enabledCheckbox" checked disabled>
        <% } else { %>
            <input class="form-check-input" type="checkbox" value="" id="disabledCheckbox" disabled>
            <% } %>

            <label class="form-check-label" for="enabledCheckbox">
            Delivered
        </label>
      </div>
      <a href="/email/send-email/<%= data._id %>?returnBackToDescription=1&forced=1" class="btn btn-primary">Trigger</a>
    </div>
  </div>
<br>
<br>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.6.0/js/bootstrap.min.js"></script>
</body>
</html>
